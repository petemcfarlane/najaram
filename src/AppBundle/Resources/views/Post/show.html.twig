{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="post-container">
            <h1>{{ post.title }}</h1>
            <span>Posted by: {{ post.author }}</span>
            <img src="{{ asset(['bundles/app/images/', post.image] | join) }}" alt="{{ post.image}}"/>
            <p><time datetime="{{ post.publishedAt | date }}">{{ post.publishedAt | date }}</time></p>
            <p>{{ post.body | nl2br }}</p>
        </div>
    </div>
